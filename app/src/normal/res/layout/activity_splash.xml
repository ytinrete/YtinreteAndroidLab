<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.ytinrete.splash.YtSplashActivity">

    <TextView
        android:id="@+id/splash_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:alpha="0"
        android:gravity="center"
        android:paddingBottom="150dp"
        android:text="@string/app_name_lab"
        android:textColor="@color/md_white_1000"
        android:textSize="50sp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_logo"
        android:layout_marginTop="-50dp">

        <TextView
            android:id="@+id/splash_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name_site"
            android:textColor="@color/md_white_1000"
            android:textSize="25sp"/>

        <View
            android:id="@+id/splash_mask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/splash_site"
            android:layout_alignLeft="@id/splash_site"
            android:layout_alignRight="@id/splash_site"
            android:layout_alignTop="@id/splash_site"
            android:background="@color/colorPrimary"/>


    </RelativeLayout>


</RelativeLayout>